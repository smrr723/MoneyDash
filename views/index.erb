
<div id="overview">
   <div id="left">
      <a href="/transactions/new"><div id="create-button">
         NEW TRANSACTION
      </div></a>
   </div>
   <div id="right">
      <div id="total">
         £<%= @total %>
      </div>
   </div>
</div>
<% @transactions.each do |transaction| %>
<div id="displayblock">
   <div id="transaction">
      <div id="tname" class="tblock"><p><%= transaction.name %></p></div>
      <div id="tamount" class="tblock"><p>£ <%= transaction.amount %></p></div>
      <div id="tdate" class="tblock"><p><%= transaction.time_added %></p></div>
   </div>

</div>

<% end %>

<% if @a %>
<% @a.each do |category| %>
<% data = category.values %>
<div id="displayblock">
   <div id="categories">
      <!-- Category Name -->
      <p><%= data[0] %></p>
      <!-- Category Total Spent -->
      <p>£<%= data[1] %></p>
   </div>

</div>
<% end %>

<% end %>
